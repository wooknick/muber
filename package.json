{
  "name": "muber",
  "version": "1.0.0",
  "description": "Clone Uber with React & GraphQL",
  "main": "index.js",
  "repository": "https://github.com/wooknick/muber.git",
  "author": "wooknick <wooknick@naver.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/helmet": "^0.0.44",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mailgun-js": "^0.22.3",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.11.7",
    "@types/twilio": "^0.0.10",
    "babel-runtime": "^6.26.0",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "ts-node": "^8.4.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "test": "exit",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api && copy ./types/* ../dist/",
    "start": "cd dist && node ."
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "class-validator": "^0.10.2",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql-tools": "^4.0.6",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "merge-graphql-schemas": "^1.7.0",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "twilio": "^3.37.0",
    "typeorm": "^0.2.20"
  }
}
